{
  "include": ["./src/**/*"],
  "compilerOptions": {
    "target": "ES2016",
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": false,
    "rootDir": "./src",
    "outDir": "./dist"
  }
}
